<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/add_photo_create_event_activity"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/load_photo_bg"
        android:text="+ Add Photo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Number of buddies required:"/>
    <Spinner
        android:id="@+id/required_buddies_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
    </Spinner>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title of Your Event"/>

    <EditText
        android:id="@+id/event_description_et"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="bottom"
        android:padding="10dp"
        android:layout_gravity="bottom"
        android:hint="Description"/>

    <TextView
        android:id="@+id/commit_event_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:padding="20dp"
        android:background="@color/greenAddBtn"
        android:text="Commit event"/>

</LinearLayout>