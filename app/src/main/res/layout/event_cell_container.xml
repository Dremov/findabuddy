<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/event_card_background"
    app:cardElevation="1dp">

    <RelativeLayout
        android:id="@+id/event_main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/event_cell_img"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/cat_pic"/>

        <TextView
            android:id="@+id/event_cell_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#ffff"
            android:text="Deutsches Spring &amp; Dressur Derby 2015 in Hamburg"
            android:layout_marginTop="20dp"
            android:layout_marginStart="135dp"
            android:layout_marginEnd="30dp"
            android:paddingEnd="15dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="135dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/event_cell_number_of_buddies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignTop="@+id/event_container_cat"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingEnd="30dp"
                android:text="2 KanÃ¤le"
                android:textColor="#54656B"
                android:textSize="15sp"
                android:visibility="visible" />
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>